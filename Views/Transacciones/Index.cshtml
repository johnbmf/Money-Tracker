@model IEnumerable<Money_Tracker.Models.Transaccion>

@{
    ViewData["PageTitle"] = "Lista de Transacciones";
}

<div class="row justify-content-center">
    <div class="col-md-7 flex-column">
        <div class="col-md-4 offset-8 text-end mb-3">
                <a class="btn btn-sm btn-success" href="/Transacciones/Create">
                    + Nueva Transacción
                </a>        
        </div>

        <ejs-grid id="Transacciones" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pagesize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Categoría" field="categoriaIconoNombre"></e-grid-column>
                <e-grid-column headerText="Fecha" field="transaccionFecha" format="dd-MM-yyyy" type="date" width="100px" textAlign="Left"></e-grid-column>
                <e-grid-column headerText="Monto" field="transaccionMontoFormat" textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Descripción" field="transaccionDescripcion"></e-grid-column>
                <e-grid-column headerText="Acciones" template="#accionesTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
        
    </div>
</div>

<script id="accionesTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Transacciones/Edit/${transaccionId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form method="post" action="/Transacciones/Delete/${transaccionId}">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;¿Estás seguro de querer borrar la transacción?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>    
        </form>
    </div>
</script>
